5. COMPLETE PYTHON IMPLEMENTATION

Here is the full combined engine:

import numpy as np

# -------------------------
#  Carroll Cognitive Engine
# -------------------------
class CCE:
    def __init__(self, pattern_gain=1.0, emotional_damping=0.35):
        self.pattern_gain = pattern_gain
        self.emotional_damping = emotional_damping

    def process(self, raw_input):
        """
        raw_input: dict with fields:
            - sensory_noise
            - emotional_charge
            - context
        """

        # Reduce noise
        signal = 1 / (1 + raw_input["sensory_noise"])

        # Apply emotional damping
        emotion = raw_input["emotional_charge"] * (1 - self.emotional_damping)

        # pattern = signal * gain + contextual meaning
        pattern_strength = self.pattern_gain * signal
        contextual = pattern_strength * raw_input["context"]

        return {
            "pattern_strength": pattern_strength,
            "emotion": emotion,
            "contextual": contextual
        }


# -----------------------------
# Carroll Adaptive Decision Engine
# -----------------------------
class CADE:
    def __init__(self, damping=0.25):
        self.damping = damping

    def decision_value(self, option, cce_output):
        T = option["tension"] + cce_output["emotion"]
        T = np.abs(T) * (1 - self.damping)

        R = option["reward"]
        K = option["risk"]

        DV = (R - K) / (1 + T)
        return DV

    def choose(self, options, cce_output):
        scores = {}
        for opt in options:
            DV = self.decision_value(opt, cce_output)
            scores[opt["label"]] = DV
        best = max(scores, key=scores.get)
        return best, scores


# -------------------------
# Carroll Dual Engine System
# -------------------------
class CDEA:
    def __init__(self):
        self.cce = CCE()
        self.cade = CADE()

    def run(self, raw_input, options):
        cce_output = self.cce.process(raw_input)
        decision, scores = self.cade.choose(options, cce_output)
        return decision, scores, cce_output


