#!/bin/bash
# Sovereign Parser Pre-Commit Hook
# Auto-generate JSON twins for .txt and .md files using parser/stub_parser.py

changed_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(txt|md)$')

if [ -z "$changed_files" ]; then
  exit 0
fi

echo "âš¡ Sovereign Parser: generating JSON twins..."

for file in $changed_files; do
  if [ -f "$file" ]; then
    json_out="${file%.*}.json"
    python3 parser/stub_parser.py --file "$file" > "$json_out"
    git add "$json_out"
    echo "  â†’ $json_out created and staged"
  fi
done

echo "âœ… Sovereign Parser complete."
#!/bin/bash
# Sovereign Parser Post-Commit Hook
# Echo parsed JSON summary after each commit

echo "âš¡ Sovereign Parser: summarizing committed artifacts..."

# Find recently committed .txt and .md files
files=$(git diff-tree --no-commit-id --name-only -r HEAD | grep -E '\.(txt|md)$')

for file in $files; do
  if [ -f "$file" ]; then
    echo "ðŸ“– $file"
    python3 parser/stub_parser.py --file "$file"
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
  fi
done

echo "âœ… Sovereign Parser summary complete."