#!/bin/bash
# Sovereign Parser Post-Commit Hook
# Echo parsed JSON summary after each commit

echo "âš¡ Sovereign Parser: summarizing committed artifacts..."

# Find recently committed .txt and .md files
files=$(git diff-tree --no-commit-id --name-only -r HEAD | grep -E '\.(txt|md)$')

for file in $files; do
  if [ -f "$file" ]; then
    echo "ðŸ“– $file"
    python3 parser/stub_parser.py --file "$file"
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
  fi
done

echo "âœ… Sovereign Parser summary complete."