name: Nightly Backup Verification

on:
  schedule:
    - cron: '0 0 * * *'  # Run at 00:00 UTC daily
  workflow_dispatch:  # Allow manual trigger

jobs:
  verify-backups:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run backup verification
        run: python tools/verify_backup.py --verify-all --check-pi

      - name: Notify on failure
        if: failure()
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: 1,  # Create issue #1 for notifications if needed
              body: 'ðŸš¨ Backup verification failed! Check workflow logs for details.'
            })